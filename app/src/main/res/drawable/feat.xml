<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color with transparency -->
    <solid android:color="#80FFFFFF"/> <!-- Semi-transparent white (80% opacity) -->

    <!-- Corner radius for rounded edges -->
    <corners android:radius="50dp" />

    <!-- Optional: Add a subtle gradient to mimic a glass effect -->
    <gradient
        android:startColor="#E1F5FE"
        android:endColor="#80FFFFFF"
        android:angle="90"/>

    <!-- Optional: Add a border with a light shadow to enhance the glass effect -->
    <stroke
        android:width="1dp"
        android:color="#B3B3B3" /> <!-- Light border -->
</shape>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color with Transparency (light blue) -->
    <solid android:color="#80A1D9FB"/> <!-- Semi-transparent light blue -->

    <!-- Rounded rectangle -->
    <corners android:radius="24dp"/>

    <!-- Shadow for depth -->


    <!-- Optional border -->
    <stroke android:color="#E0E0E0" android:width="1dp"/>

    <!-- Optional gradient for more effect -->
    <gradient
        android:startColor="#A1D9FB"
        android:endColor="#6FD9FB"
        android:angle="45"/>
</shape>

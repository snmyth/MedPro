<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_bg"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- FrameLayout for Fragments -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <!-- CoordinatorLayout with BottomAppBar and FAB -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <!-- BottomAppBar -->
            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabAlignmentMode="center"
                app:fabAnchorMode="cradle"
                app:fabCradleMargin="21dp"
                app:fabCradleRoundedCornerRadius="16dp"
                app:fabCradleVerticalOffset="10dp">

                <!-- BottomNavigationView -->
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_nav"
                    android:layout_marginEnd="12dp"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:layout_height="wrap_content"
                    app:menu="@menu/bottom_nav_menu"
                    app:labelVisibilityMode="labeled" />
            </com.google.android.material.bottomappbar.BottomAppBar>

            <!-- FloatingActionButton -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E04D9B"
                android:contentDescription="AI"
                android:src="@drawable/baseline_auto_awesome_24"
                android:tooltipText="Chat With AI"
                app:layout_anchor="@+id/bottom_app_bar"
                app:layout_anchorGravity="top|center" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>

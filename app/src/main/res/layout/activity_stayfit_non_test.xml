<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".stayfit_non_test">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/previewView"
        app:layout_constraintTop_toTopOf="@id/previewView" />

    <!-- Hidden Sensor Data (for binding) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">
        <TextView android:id="@+id/accX" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/accY" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/accZ" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/gyroX" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/gyroY" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/gyroZ" android:layout_width="0dp" android:layout_height="0dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/previewView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- BPM Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2D2D2D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/bpm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textColor="#FF4081"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_thin" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Speed Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2D2D2D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KM/H"
                            android:textColor="#64FFDA"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_thin" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Temperature Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2D2D2D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â°C"
                            android:textColor="#FFD740"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_thin" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Secondary Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Calories Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2D2D2D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KCAL"
                            android:textColor="#FF6E40"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_thin" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Cadence Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2D2D2D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/cadence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RPM"
                            android:textColor="#69F0AE"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_thin" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Inclination Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2D2D2D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/inclination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEG"
                            android:textColor="#B388FF"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_thin" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Session Info Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#2D2D2D"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SESSION"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"
                        android:fontFamily="@font/montserrat_thin" />

                    <!-- Time and Distance Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <!-- Time Card -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TIME"
                                android:textColor="#64FFDA"
                                android:textSize="12sp"
                                android:letterSpacing="0.1"
                                android:fontFamily="@font/montserrat_thin" />

                            <TextView
                                android:id="@+id/timeElapsed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/montserrat_semibold" />
                        </LinearLayout>

                        <!-- Distance Card -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DISTANCE"
                                android:textColor="#FF4081"
                                android:textSize="12sp"
                                android:letterSpacing="0.1"
                                android:fontFamily="@font/montserrat_thin" />

                            <TextView
                                android:id="@+id/distanceTravelled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 km"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/montserrat_semibold" />
                        </LinearLayout>

                        <!-- Average Speed Card -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AVG SPEED"
                                android:textColor="#FFD740"
                                android:textSize="12sp"
                                android:letterSpacing="0.1"
                                android:fontFamily="@font/montserrat_thin" />

                            <TextView
                                android:id="@+id/averageSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0 km/h"
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/montserrat_semibold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#64FFDA"
                    android:text="START"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/montserrat_semibold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF4081"
                    android:text="STOP"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/montserrat_semibold"
                    app:cornerRadius="28dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>